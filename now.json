{
    "name": "Podcasts-for-all",
    "version": 2,
    "builds": [{
        "src": "server.js",
        "use": "@now/node-server"
    },
    { "src": "index.html", "use": "@now/static" }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/index.html",
            "dest": "index.html"
        }
    ],
    "env": {
        "VERSION": "@version",
        "LOG_LEVEL": "@log_level",
        "PODCASTS_API_KEY": "@podcasts_api_key"
    },
    "github": {
        "silent": true
    },
    "alias": ["podcasts-for-all.ga"]
}
