{
    "version": 2,
    "builds": [{
        "src": "serverless.js",
        "use": "@now/node"
    }],
    "routes": [{
        "src": "/.*",
        "dest": "/serverless.js",
        "headers": { "cache-control": "s-maxage=86400" }
    }],
    "env": {
        "VERSION": "@version",
        "LOG_LEVEL": "@log_level",
        "PODCASTS_API_KEY": "@podcasts_api_key" 
    },
    "github": {
        "silent": true
    },
    "scope": "podcast-for-all-stremio",
    "alias": ["podcasts-for-all.ga"]
} 