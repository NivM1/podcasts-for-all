    
{
    "version": 2,
    "builds": [
      { "src": "*.js", "use": "@now/node-server" }
    ],
    "routes": [
        { "src": "/static", "dest": "resources" },
      { "src": "/(.*)", "dest": "server.js" }
    ],
    "env": {
        "VERSION": "@version",
        "LOG_LEVEL": "@log_level",
        "PODCASTS_API_KEY": "@podcasts_api_key"
    }
  }