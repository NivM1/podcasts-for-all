    
{
    "version": 2,
    "builds": [
      { "src": "*.js", "use": "@now/node-server" }
    ],
    "routes": [
      { "src": "/addon", "dest": "addon.js" },
      { "src": "/(.*)", "dest": "server.js" }
    ],
    "env": {
        "LOG_LEVEL": "@LOG_LEVEL",
        "PODCASTS_API_KEY": "@PODCASTS_API_KEY"
    }
  }